  (mouse_x - 200 * scale)^2 + (mouse_y - knob_y1)^2 < (15 * scale)^2 ? (
    slider_to_edit = 21; drag_start_y = mouse_y;
  );
  (mouse_x - 310 * scale)^2 + (mouse_y - knob_y1)^2 < (15 * scale)^2 ? (
