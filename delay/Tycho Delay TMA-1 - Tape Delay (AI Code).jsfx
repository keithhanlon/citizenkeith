    target_filter_freq = slider30;
    gui_cache_dirty = 1; // Force GUI cache update
    sliderchange(30);
  );
  slider_to_edit == 35 ? ( // Delay saturation
    slider35 = max(1, min(100, slider35 - mouse_dy * 99 / 300));
